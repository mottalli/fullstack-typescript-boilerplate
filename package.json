  "scripts": {
    "build:server": "tsc --rootDir ./src/server --outDir ./_output/server",
    "build:client": "webpack --config ./src/client/webpack.config.js --mode production",
    "build:server:watch": "tsc --watch --rootDir ./src/server --outDir ./_output/server",
    "start:server:watch": "nodemon -w ./_output/server --delay 500ms -x 'node ./_output/server/main.js'",
    "start:client": "webpack-dev-server --config ./src/client/webpack.config.js --mode development --devtool inline-source-map --hot",
