    "@types/react-dom": "^16.0.11",
    "concurrently": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.18.9",
    "ts-loader": "^5.3.2",
    "typescript": "^3.2.2",
